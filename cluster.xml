<configuration scan="true" scanPeriod="60 seconds">
    <!--storm 0.9.4 ONLY has a single logback.xml for both supervisor AND workers, so we can only use stdout log for supervisor
        by specifying certain classes to use that appender (and workers stdout is ignored) -->
    <appender name="A0" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{yyyy-MM-dd'T'HH:mm:ss.SSSZZ} %c{1} [%p] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="A1" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/storm/${logfile.name}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/var/log/storm/${logfile.name}.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>9</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %c{1} [%p] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="SYSLOG" class="ch.qos.logback.classic.net.SyslogAppender">
      <syslogHost>${STORM_SYSLOG_HOST}</syslogHost>
      <syslogPort>${STORM_SYSLOG_PORT}</syslogPort>
      <facility>DAEMON</facility>
      <suffixPattern>[%thread] %logger %msg</suffixPattern>
    </appender>

    <appender name="ACCESS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/storm/access.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/var/log/storm/access.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>9</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %c{1} [%p] %m%n</pattern>
        </encoder>
    </appender>

    <appender name="METRICS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/var/log/storm/metrics.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
            <fileNamePattern>/var/log/storm/metrics.log.%i</fileNamePattern>
            <minIndex>1</minIndex>
            <maxIndex>9</maxIndex>
        </rollingPolicy>

        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>2MB</maxFileSize>
        </triggeringPolicy>

        <encoder>
            <pattern>%d %-8r %m%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <!--note cannot use A0 (console appender) as root default appender until new storm release -->
        <appender-ref ref="A1"/>
        <appender-ref ref="SYSLOG"/>
    </root>
    <!--log nimbus to console appender AND nimbus.log-->
    <logger name="backtype.storm.daemon.nimbus" additivity="true">
        <level value="INFO"/>
        <appender-ref ref="A0"/>
    </logger>
    <logger name="storm.mesos" additivity="true">
        <level value="INFO"/>
        <appender-ref ref="A0"/>
    </logger>
    <!--log supervisor to console appender AND supervisor.log-->
    <logger name="backtype.storm.daemon.supervisor" additivity="true">
        <level value="INFO"/>
        <appender-ref ref="A0"/>
    </logger>
    <!--log curator to console appender AND supervisor.log - WILL CAUSE WORKER CURATOR LOGS ON STDOUT TO BE LOST-->
    <logger name="org.apache.storm.curator" additivity="true">
        <level value="INFO"/>
        <appender-ref ref="A0"/>
    </logger>
    <!--log zookeeper to console appender AND supervisor.log - WILL CAUSE WORKER ZOOKEEPER LOGS ON STDOUT TO BE LOST-->
    <logger name="org.apache.storm.zookeeper" additivity="true">
        <level value="INFO"/>
        <appender-ref ref="A0"/>
    </logger>

    <logger name="backtype.storm.security.auth.authorizer" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="ACCESS"/>
    </logger>

    <logger name="backtype.storm.metric.LoggingMetricsConsumer" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="METRICS"/>
    </logger>

</configuration>
